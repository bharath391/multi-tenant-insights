{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",           
    "moduleResolution": "nodenext", 
    "target": "es2022",             
    "lib": ["esnext"],              
  
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,             

    "esModuleInterop": true,          
    "verbatimModuleSyntax": true,  
    
    "sourceMap": true,

  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}